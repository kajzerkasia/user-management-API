<h2>{{user.firstName}}</h2>
<table class="header-of-left">
    <tbody>
        <tr>
            <th>
                E-mail
            </th>
            <td>
                <a href="mailto:{{user.email}}" target="_blank">{{user.email}}</a>
            </td>
        </tr>
        <tr>
            <th>
                Name
            </th>
            <td>
                {{user.firstName}}
            </td>
        </tr>
        <tr>
            <th>
                Surname
            </th>
            <td>
                {{user.lastName}}
            </td>
        </tr>
        <tr>
            <th>
                Role
            </th>
            <td>
                {{user.role}}
            </td>
        </tr>
    </tbody>
</table>

<p>
<form method="GET" action="/api/forms/edit/{{user.id}}">
    <button type="submit">Edit data</button>
</form>
</p>
<p>
    {{> go-to-users}}
</p>
